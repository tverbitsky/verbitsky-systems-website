# Verbitsky Systems - URL Routing Configuration
# IMPORTANT: Test carefully - rename to .htaccess-backup if 403 errors occur

RewriteEngine On

# Remove www (optional)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Force HTTPS (optional)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Route all page requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(css|js|images|php)/
RewriteCond %{REQUEST_URI} !^/robots\.txt$
RewriteCond %{REQUEST_URI} !^/favicon\.ico$
RewriteRule ^(home|about|ai-assistant|knowledge-base|support|contact)/?$ /index.html [L]

# Redirect old hash URLs to new clean URLs
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^index\.html$ / [R=301,L]
